<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgCatLogo"
        android:layout_width="200dp"
        android:layout_height="150sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat" />

    <EditText
        android:id="@+id/edtUsúario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imgCatLogo"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_account_circle"
        android:hint="Insira o Nome de Usúario"
        android:inputType="textPersonName"
        android:padding="10sp" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edtUsúario"
        android:layout_margin="20sp"
        android:drawableEnd="@drawable/baseline_lock"
        android:hint="Insira a Senha do Usúario"
        android:inputType="textPassword"
        android:padding="10sp" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSenha"
        android:layout_margin="20dp"
        android:text="Entrar" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSenha"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/btnEntrar"
        android:text="Sair" />

</RelativeLayout>
</ScrollView>